# Environment Variables Template for AI Chatbot Backend
# Copy this file to .env and fill in your values

# Google Cloud Configuration
PROJECT_ID=your-project-id
PROJECT_NUMBER=your-project-number
LOCATION=us-central1

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app

# Security - Service Account Credentials
# Option 1: Use GOOGLE_APPLICATION_CREDENTIALS environment variable (RECOMMENDED)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# Option 2: For Cloud Run deployment, use Application Default Credentials (most secure)
# No additional configuration needed

# CORS Configuration (restrict to your domains)
CORS_ORIGINS=https://your-frontend-domain.com,https://your-other-domain.com

# AI Model Configuration
GENERATIVE_MODEL_NAME=gemini-2.5-flash
EMBEDDING_MODEL_NAME=text-embedding-004

# TTS Configuration
DEFAULT_VOICE_NAME=en-US-Chirp3-HD-Leda
DEFAULT_LANGUAGE_CODE=en-US

# Security Settings
DEBUG_MODE=false
LOG_QUERIES=false

# API Security - Generate secure API keys for production
# API_KEYS=your-api-key-1,your-api-key-2,your-api-key-3
# ADMIN_API_KEY=your-admin-api-key

# Local Development
IS_LOCAL=false